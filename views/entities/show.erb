<h1><%= @entity.number %> | <%= @entity.description %></h1>
<% if current_key.admin? %>
  <div class="action-menu">
    <button class="action-button" onclick="location.href='/entities/edit/<%= @entity.id %>';">
      Edit Entity
    </button>
  </div>
<% end %>
<h3>
  Assembly: <%= @entity.assembly.description %>
</h3>
<h3>
  Manufacturer: <%= @entity.assembly.manufacturer %>
</h3>
<h3>
  Model: <%= @entity.assembly.model %>
</h3>
<h3>
  Serial Number: <%= @entity.serial %>
</h3>

<% @request_records = request_records&.by_entity(@entity) %>
<%= erb :"shared/log_table" %>
