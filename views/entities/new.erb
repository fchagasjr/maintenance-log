<h3 class="title">New Entity</h3>
<form class="form new-element" method="post" action="/entities">
  <label for="number">Number</label>
  <input type="text" name="number"><br>
  <label for="description">Description</label>
  <input type="text" name="description"><br>
  <label for="assembly_id">Assembly</label>
  <select name="assembly_id">
    <% assemblies.each do |assembly| %>
      <option value=<%= assembly.id %>>
        <%= assembly.manufacturer %> | <%= assembly.description %> | <%=  assembly.model %></option>
    <% end %>
  </select><br>
  <label for="serial">Serial Number</label>
  <input type="text" name="serial"><br>
  <input class="submit-button" type="submit" name="submit">
</form>