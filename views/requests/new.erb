<h2>Enter new Service Request</h2>
<form method="post" action="/request_record">
  <label for="entity_id">Entity</label>
  <select name="entity_id">
    <% @entities.each do |entity| %>
      <option value=<%= entity.id %>><%= entity.description %></option>
    <% end %>
  </select><br>
  <label for="request_type_id">Type</label>
  <select name="request_type_id">
    <% @request_types.each do |request_type| %>
      <option value=<%= request_type.id %>><%= request_type.description %></option>
    <% end %>
  </select><br>
  <label for="description">Description</label>
  <input type="text" name="description"><br>
  <input type="submit" name="submit">
</form>