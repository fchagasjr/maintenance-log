<table class="table log_entries-table">
  <tr class="table-header">
    <th>Entity</th>
    <th>Request Type</th>
    <th>Request Information</th>
    <th>Service Type</th>
    <th>Service Information</th>
    <th>Closed at</th>
  </tr>
  <% RequestRecord.refresh.each do |request_record| %>
    <tr class="log-row table-row">
      <td>
        <a href="/entities/<%= request_record.entity.id %>" ><%= request_record.entity.id %></a>
      </td>
      <td>
        <a href="/request_records/<%= request_record.id %>">
          <%= request_record.request_type.description %>
        </a>
      </td>
      <td>
        <a href="/request_records/<%= request_record.id %>">
          <%= request_record.description %>
        </a>
      </td>
      <td>
        <a href="/request_records/<%= request_record.id %>">
          <%= request_record.service_record&.service_type&.description %>
        </a>
      </td>
      <td>
        <a href="/request_records/<%= request_record.id %>">
          <%= request_record.service_record&.description %>
        </a>
      </td>
      <td>
        <a href="/request_records/<%= request_record.id %>">
          <%= request_record.service_record&.closed_at %>
        </a>
      </td>
    </tr>
  <% end %>
</table>
