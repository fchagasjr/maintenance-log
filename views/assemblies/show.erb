<h3 class="title"><%= @assembly.description %></h3>
<% if current_key.admin? %>
  <div class="action-menu">
    <button class="action-button" onclick="location.href='/assemblies/edit/<%= @assembly.id %>';">
      Edit Assembly
    </button>
  </div>
<% end %>
<p>
  <strong>Manufacturer:</strong> <%= @assembly.manufacturer %>
</p>
<p>
  <strong>Model:</strong> <%= @assembly.model %>
</p>

<% @request_records = request_records&.by_assembly(@assembly) %>
